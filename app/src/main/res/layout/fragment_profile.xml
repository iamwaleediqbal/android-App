<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"
        tools:context=".brand.fragments.ProfileFragment">

        <TextView
            android:id="@+id/txt_edit"
            style="@style/txtalpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/_55sdp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_72sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_edit">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/_70sdp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/_360sdp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/_16sdp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/_16sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_login"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="@dimen/_22sdp"
                    app:layout_constraintBottom_toTopOf="@id/guide_center"
                    app:layout_constraintEnd_toEndOf="@id/guide_end"
                    app:layout_constraintStart_toStartOf="@id/guide_start"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_profile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginTop="@dimen/_22sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_menu_profile" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Profile" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_order_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_21sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_orderlist" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="View Order List" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_products"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_my_products" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="My Products" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_balance"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_my_balance" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="My Balance" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_change_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_change_password" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Change Password" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_swicth_brand"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_switch_brand" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Switch Brand" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_brand_profile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_brand_profile" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Change Brand Profile" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_stripe"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:weightSum="11"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_weight="2"
                                android:src="@drawable/ic_stripe" />

                            <TextView
                                style="@style/styleplease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Stripe Connect" />

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_arrow_menu" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_logout"
                    style="@style/btnblack"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_22sdp"
                    android:background="@drawable/btn_black"
                    android:text="Log Out"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_login" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
